<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        android:padding="20dp">

        <ImageView
            android:id="@+id/car_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#000000"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/car_photo"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/xlk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="￥596"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/czye"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/btn_click1"
                    android:layout_weight="2"
                    android:text="充值"
                    android:textSize="25sp"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--第一行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/xh_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宝马X5"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/xh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="型号"
                    android:layout_below="@id/xh_text"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/fdj_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B58B30"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/fdj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发动机"
                    android:layout_below="@id/fdj_text"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/cj_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUV"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/cj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车架"
                    android:layout_below="@id/cj_text"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
        </LinearLayout>

        <!--    第二行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:paddingLeft="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/qclx_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中型汽车"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/qclx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="汽车类型"
                    android:layout_below="@id/qclx_text"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/cplx_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蓝牌"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/cplx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌类型"
                    android:layout_below="@id/cplx_text"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/cphm_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="桂B34615"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/cphm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌号码"
                    android:layout_below="@id/cphm_text"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/wzcs_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="3"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/wzcs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wzcs_text"
                    android:layout_centerHorizontal="true"
                    android:text="违章次数" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/zkf_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="4"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/zkf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zkf_text"
                    android:layout_centerHorizontal="true"
                    android:text="总扣分" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/zfk_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="550"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/zfk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zfk_text"
                    android:layout_centerHorizontal="true"
                    android:text="总罚款" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前车速："
                android:textColor="#000000"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/car_speed"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"/>
        </LinearLayout>

        <Switch
            android:id="@+id/stop_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="设置启停"/>

        <Spinner
            android:id="@+id/park_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            />
    </LinearLayout>



</LinearLayout>
</ScrollView>